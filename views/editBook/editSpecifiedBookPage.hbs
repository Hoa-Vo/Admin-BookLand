<link rel="stylesheet" href="css/adminDetail.css" />
<div>
    <form method="POST" action="/bookslist/edit" enctype="multipart/form-data" class="form-horizontal">
        <fieldset>
            <!-- Form Name -->
            <legend class="text-center">Chỉnh sửa quyển sách</legend>
            <!-- Text input-->
            <div class="form-group">
                <div style="display: none;" class="col-md-4">
                    <input id="textinput" name="idInput" value="{{id}}" class="form-control input-md" type="text"
                        required="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Tên</label>
                <div class="col-md-4">
                    <input id="textinput" name="titleInput" value="{{title}}" class="form-control input-md" type="text"
                        required="">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Giá</label>
                <div class="col-md-4">
                    <input id="textinput" name="basePriceInput" value="{{basePrice}}" class="form-control input-md"
                        type="number" required="">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Tác giả</label>
                <div class="col-md-4">
                    <input id="textinput" name="authorInput" value="{{author}}" class="form-control input-md"
                        type="text" required="">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Nhà xuất bản</label>
                <div class="col-md-4">
                    <input id="textinput" name="publisherInput" value="{{publisher}}" class="form-control input-md"
                        type="text" required="">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Hình</label>
                <div class="col-md-4">
                    <input type="file" onchange="previewImage(event)" name="bookImage" class="input-group input-file" />
                    <img style="width: 100px; height:100px" id="preview" />
                </div>
            </div>
            <!-- Button (Double) -->
            <div class="form-group">
                <div class="col-md-4">
                    <button type="submit" id="btnSave" name="btnSave" class="btn btn-success">
                        Lưu</button>
                </div>
            </div>
</div>
</fieldset>
</form>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="js/axios.js"></script>
</div>