<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<div>
    <form method="POST" action="/bookslist/edit" class="form-horizontal">
        <fieldset>
            <!-- Form Name -->
            <legend class="text-center">Tạo mới một quyển sách</legend>
            <!-- Text input-->
            <div class="form-group">
                <div style="display: none;" class="col-md-4">
                    <input id="textinput" name="idInput" value="{{id}}" class="form-control input-md" required=""
                        type="text">
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Name</label>
                <div class="col-md-4">
                    <input id="textinput" name="titleInput" value="{{title}}" class="form-control input-md" required=""
                        type="text">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Base Price</label>
                <div class="col-md-4">
                    <input id="textinput" name="basePriceInput" value="{{basePrice}}" class="form-control input-md"
                        required="" type="text">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Author</label>
                <div class="col-md-4">
                    <input id="textinput" name="authorInput" value={{author}} class="form-control input-md" required=""
                        type="text">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Publisher</label>
                <div class="col-md-4">
                    <input id="textinput" name="publisherInput" value={{publisher}} class="form-control input-md"
                        required="" type="text">
                </div>
            </div>
            <!-- Text input-->
            <!-- Button (Double) -->
            <label class="col-md-4 control-label" for="btnCancel">Save Marker</label>
            <div class="col-md-8">
                <button type="submit" id="btnSave" name="btnSave" class="btn btn-success">
                    Save</button>
            </div>
</div>
</fieldset>
</form>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="js/axios.js"></script>
</div>