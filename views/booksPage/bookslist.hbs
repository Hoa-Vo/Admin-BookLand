<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://kit.fontawesome.com/21d91c27a8.js" crossorigin="anonymous"></script>
<script src=js/axios.js></script>
<script>
	$(document).ready(function () {
		$("#mytable #checkall").click(function () {
			if ($("#mytable #checkall").is(':checked')) {
				$("#mytable input[type=checkbox]").each(function () {
					$(this).prop("checked", true);
				});
			} else {
				$("#mytable input[type=checkbox]").each(function () {
					$(this).prop("checked", false);
				});
			}
		});
		$("[data-toggle=tooltip]").tooltip();
	});
</script>
<div class="container">
	<br /><br /><br /><br /><br /><br />
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col col-xs-6">
					<h1>Bảng thông tin sách</h1>
				</div>
				<div class="col col-xs-6 text-center">
						<a href="./createNew">
							<button type="submit" class="btn btn-md btn-primary btn-create">
							Create New
						</button>
						</a>
				
				</div>
			</div>
			<br />
			<div class="table-responsive">
				<table id="mytable" class="table table-bordred table-striped ">
					<thead>
						<th><input type="checkbox" id="checkall" /></th>
						<th>ID</th>
						<th>Image</th>
						<th>Title</th>
						<th>Base Price</th>
						<th>Author</th>
						<th>Publisher</th>
						<th>Edit</th>
						<th>Delete</th>
					</thead>
					<tbody>
						{{#each books}}
							<tr>
								<td><input type="checkbox" class="checkthis" /></td>
								<td>{{image_link}}</td>
								<td><img class="book-image" src="images/booksImage/{{image_link}}.jpg" /> </td>
								<td>
									<div class="book-title">
										{{title}}
									</div>
								</td>
								<td>{{basePrice}} VND</td>
								<td>{{author}}</td>
								<td>{{publisher}}</td>
								<td>
									<p data-placement="top" data-toggle="tooltip" title="Edit">
										<button onclick="editBook(this.id)" id="{{_id}}-edit"
											class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal"
											data-target="#edit">
											<span class="glyphicon glyphicon-pencil"></span>
										</button>
									</p>
								</td>
								<td>
									<p data-placement="top" data-toggle="tooltip" title="Delete">
										<button id="{{_id}}-del" onclick="delBook(this.id)"
											class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal">
											<i class="far fa-trash-alt"></i>
									</p>
								</td>
							</tr>
						{{/each}}
					</tbody>
				</table>
				<div class="clearfix"></div>
				<ul class="pagination pull-right">
					<li class="disabled"><a href="#"><i class="fas fa-backward"></i></span></a></li>
					<li class="active"><a href="#">1</a></li>
					<li><a href="#">2</a></li>
					<li><a href="#">3</a></li>
					<li><a href="#">4</a></li>
					<li><a href="#">5</a></li>
					<li><a href="#"><i class="fas fa-forward"></i></span></a></li>
				</ul>
			</div>
		</div>
	</div>
</div>