<link rel="stylesheet" href="css/adminDetail.css" />
<div>
    <form id="submitForm" method="POST" action="./" enctype="multipart/form-data" class="form-horizontal">
        <fieldset>
            <!-- Form Name -->
            <legend class="text-center">Tạo mới một quyển sách</legend>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Tên</label>
                <div class="col-md-4">
                    <input id="textinput" name="titleInput" placeholder="Nhập tên sách" class="form-control input-md"
                        required type="text">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Giá</label>
                <div class="col-md-4">
                    <input id="textinput" name="basePriceInput" placeholder="Nhập giá sách"
                        class="form-control input-md" type="number" required>
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Tác giả</label>
                <div class="col-md-4">
                    <input id="textinput" name="authorInput" placeholder="Nhập tác giả" class="form-control input-md"
                        required type="text">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Nhà xuất bản</label>
                <div class="col-md-4">
                    <input id="textinput" name="publisherInput" placeholder="Nhập nhà xuất bản"
                        class="form-control input-md" required type="text">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-4 control-label" for="textinput">Hình</label>
                <div class="col-md-4">
                    <input type="file" onchange="previewImage(event)" name="book-image"
                        class="input-group input-file" />
                    <img style="width: 100px; height:100px" id="preview" />
                </div>
            </div>
            <!-- Button (Double) -->
            <label class="col-md-4 control-label" for="btnCancel"></label>
            <div class="col-md-8">
                <button type="submit" id="btnSave" name="btnSave" class="btn btn-success">
                    Tạo mới</button>
            </div>
</div>
</fieldset>
</form>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="js/axios.js"></script>
</div>